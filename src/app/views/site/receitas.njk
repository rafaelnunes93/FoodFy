{% extends "../layout.njk" %}

{%block head%}
    <title>FoodFy</title>
{% endblock %}

{% block content %}

    <section class="container receitas">

        <div class="melhores">
            {% for item in recipes%}
                <div class="card" id="{{item.id}}">
                    <div class="card-image">
                        <img src="{{item.image}}" alt="">
                    </div>
                    <div class="card-descricao">
                        <h4>{{item.title}}</h4>
                        <p>por:
                            {{item.chefs_name}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    <script src="/scripts.js"></script>
{% endblock %}